# Environment Configuration
# Copy this file to .env and customize for your environment

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_DEBUG=True

# Database
DATABASE_URL=sqlite+aiosqlite:///./database/tor_correlation.db

# TOR Data Sources (do not change - official TOR Project endpoints)
TOR_METRICS_API=https://onionoo.torproject.org/

# Correlation Parameters
TIME_CORRELATION_WINDOW=300
MIN_CONFIDENCE_THRESHOLD=30.0

# Default Weight Profile (used when no custom profile specified)
# Profiles can be customized per investigation via API
# Predefined profiles: standard, time_focused, volume_focused, pattern_focused
# Weights must sum to 1.0
DEFAULT_WEIGHT_PROFILE=standard
# Custom weights (only used if DEFAULT_WEIGHT_PROFILE=custom)
WEIGHT_TIME_CORRELATION=0.40
WEIGHT_VOLUME_SIMILARITY=0.30
WEIGHT_PATTERN_SIMILARITY=0.30

# Logging
LOG_LEVEL=INFO
